###############################################################################
# PhishGuard Web Dashboard - Environment Configuration
###############################################################################
# This file contains all environment variables needed for the application.
# Copy this file to .env.local and fill in the actual values.
# DO NOT commit .env.local to version control.
###############################################################################

###############################################################################
# Backend API Configuration
###############################################################################
# Base URL for the PhishGuard backend API
# Production: https://phish.equators.site/api
# Development: http://localhost:5000/api (adjust port as needed)
NEXT_PUBLIC_API_BASE_URL=https://phish.equators.site/api

###############################################################################
# Application Configuration
###############################################################################
# Application name displayed across the dashboard
NEXT_PUBLIC_APP_NAME=PhishGuard

# Application environment (development, staging, production)
NODE_ENV=production

###############################################################################
# Authentication & Security
###############################################################################
# JWT secret for token verification (if handled on frontend)
# NEXT_PUBLIC_JWT_SECRET=your-secure-jwt-secret-here

# OAuth provider credentials (if implementing OAuth)
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
# NEXT_PUBLIC_GITHUB_CLIENT_ID=your-github-client-id

###############################################################################
# Analytics & Monitoring (Optional)
###############################################################################
# Google Analytics tracking ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

###############################################################################
# Feature Flags (Optional)
###############################################################################
# Enable/disable maintenance mode
# MAINTENANCE_MODE=false

# Enable/disable specific features
# FEATURE_OAUTH_LOGIN=true
# FEATURE_EXPORT_DATA=true

###############################################################################
# External Services (Optional)
###############################################################################
# Email service for notifications (if implemented)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password

###############################################################################
# Development & Debugging
###############################################################################
# Enable verbose logging in development
# DEBUG=true

# Skip authentication checks (development only - never in production!)
# SKIP_AUTH=false
